
@{
    ViewData["Title"] = "Login";
}

@model LoginViewModel

<div class="container">
    <h1>Login</h1>
    <form asp-action="LoginConfirm">
        <div class="form-group">
            <label>Email:</label>
            <input class="form-control" asp-for="@Model.userName" />
            <span asp-validation-for="@Model.userName"></span>
        </div>
        <div class="form-group" style="margin-top: 15px">
            <label>Password:</label>
            <input class="form-control" type="password" asp-for="@Model.password" />
            <span asp-validation-for="@Model.password"></span>
        </div>
        <div class="form-check" style="margin-bottom: 15px; margin-top: 15px">
            <input class="form-check-input me-2" id="rememberMe" type="checkbox" asp-for="@Model.rememberMe" />
            <label class="form-check-label" for="rememberMe">
                Remember Me
            </label>
        </div>
        <div>
            <button class="btn btn-outline-success">Login</button>
        </div>
    </form>
</div>
